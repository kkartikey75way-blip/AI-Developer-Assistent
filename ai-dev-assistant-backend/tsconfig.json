{
  "compilerOptions": {
    "target": "ES2021",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src",
    "src/types/express.d.ts"
  ]
}